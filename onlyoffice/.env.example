# .env file - Environment Configuration
# KHÔNG commit file này vào git! Thêm vào .gitignore

# ===========================================
# ONLYOFFICE CONFIGURATION
# ===========================================
ONLYOFFICE_JWT_SECRET=
ONLYOFFICE_PORT=8081
ONLYOFFICE_BASE_URL=http://localhost:8081

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Main E-Form Database
POSTGRES_EFORM_DB=eform_db
POSTGRES_EFORM_USER=eform_user
POSTGRES_EFORM_PASSWORD=

# OnlyOffice Database
POSTGRES_ONLYOFFICE_DB=onlyoffice_db
POSTGRES_ONLYOFFICE_USER=onlyoffice_user
POSTGRES_ONLYOFFICE_PASSWORD=

# Database Port
POSTGRES_PORT=5432

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Backend
BACKEND_PORT=8080
BACKEND_BASE_URL=http://localhost:8080

# Frontend
FRONTEND_PORT=3000

# Spring Profile
SPRING_PROFILE=production

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_PORT=6379

# ===========================================
# NGINX CONFIGURATION (Optional)
# ===========================================
NGINX_HTTP_PORT=8081
NGINX_HTTPS_PORT=8443

# ===========================================
# SECURITY KEYS (Generate new ones for production)
# ===========================================
# Database encryption key
DB_ENCRYPTION_KEY=

# Session secret
SESSION_SECRET=

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# FILE STORAGE CONFIGURATION
# ===========================================
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=.docx,.doc,.pdf

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30s

# ===========================================
# DEVELOPMENT SETTINGS (Remove in production)
# ===========================================
# Uncomment for development
# POSTGRES_PORT=5433
# BACKEND_PORT=8081
# FRONTEND_PORT=3001
# SPRING_PROFILE=development
# LOG_LEVEL=DEBUG